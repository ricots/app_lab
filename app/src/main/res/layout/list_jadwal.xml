<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_jadwal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/jadwal"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp" />
    <!---movie title-->

    <TextView
        android:id="@+id/kegiatan_lab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ya allah"
        android:layout_toRightOf="@+id/image_jadwal"
        android:layout_below="@+id/tempat"
        android:textSize="17dp" />
    <!--rate-->
    <TextView
        android:id="@+id/prodi_lab"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kegiatan_lab"
        android:layout_toRightOf="@+id/image_jadwal"
        android:text="tes"
        android:textSize="15dp" />
    <!--genre-->
    <!--year-->
    <TextView
        android:id="@+id/jam_lab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prodi_lab"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/image_jadwal"
        android:text="tess"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/slsai_lab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_jadwal"
        android:gravity="right"
        android:layout_below="@+id/jam_lab"
        android:text="ya allah"
        android:textSize="12dp" />
</RelativeLayout>